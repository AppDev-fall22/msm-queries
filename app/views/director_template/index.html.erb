<h1>List of all directors</h1>

<table border="1">
  <tr>
    <td style="text-align: center"><strong>ID</strong></td>
    <td style="text-align: center"><strong>Image</strong></td>
    <td style="text-align: center"><strong>Name</strong></td>
    <td style="text-align: center"><strong>Dob</strong></td>
    <td></td>
  </tr>
  <% @list_of_directors.each do |a_thing| %>
    <tr>
      <td><%= a_thing.id%></td>
      <td>
        <img src="http://robohash.org/<%=a_thing.bio%>">
      </td>
      <td><%= a_thing.name%></td>
      <td><%= a_thing.dob%></td>
      <td>
        <a href="/directors/<%= a_thing.id%>">Show details</a>
      </td>
    </tr>
  <%end%>
</table>
