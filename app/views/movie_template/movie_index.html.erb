<h1>List of all movies</h1>

<table border="1">
  <tr>
    <td style="text-align: center"><strong>ID</strong></td>
    <td style="text-align: center"><strong>Image</strong></td>
    <td style="text-align: center"><strong>Title</strong></td>
    <td style="text-align: center"><strong>Year</strong></td>
    <td style="text-align: center"><strong>Director</strong></td>
    <td></td>
  </tr>

  <% @list_of_movies.each do |a_movie|%>
    <tr>
      <td>
        <%= a_movie.id%>
      </td>
      <td>
        <img src="http://robohash.org/<%= a_movie.image%>?set=set2">
      </td>
      <td>
        <%= a_movie.title%>
      </td>
      <td>
        <%= a_movie.year%>
      </td>
      <td>
        <%d = Director.where({ :id => a_movie.director_id}).at(0)%>
        <%= d.name%>
      </td>
      <td>
        <a href="/movies/<%=a_movie.id%>">Show details</a>
      </td>
    </tr>
  <%end%>
</table>
